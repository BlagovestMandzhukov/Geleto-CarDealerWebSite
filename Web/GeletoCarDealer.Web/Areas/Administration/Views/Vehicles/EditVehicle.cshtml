@model GeletoCarDealer.Web.ViewModels.Administration.Vehicles.EditVehicleViewModel
@using GeletoCarDealer.Data.Models.Enums

@{
    ViewData["Title"] = "Редактиране на автомобил";
}

<!-- /.preloader -->
@*<div id="preloader"></div>
<div class="theme-layout"></div>*@
<div align="center">
    <h1>Добавяне на автомобили</h1>
</div>
<form method="post" align="center">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Category">Избери категория</label>
            <select name="Category" asp-for="Category" asp-items="@Html.GetEnumSelectList<CategoryType>()" placeholder="Категория" class="form-control">
                <option value="">Избери категория</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Make">Добави Марка</label>
            <input asp-for="Make" type="text" class="form-control" id="make" name="Make" placeholder="Добави марка на автомобила">
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Model">Добави модел</label>
            <input asp-for="Model" type="text" class="form-control" id="model" name="Model" placeholder="Добави модел на автомобила">
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <div asp-validation-summary="ModelOnly"></div>
            <label asp-for="Year">Година на производство</label>
            <input asp-for="Year" type="number" class="form-control" id="year" name="Year" placeholder="Година на производство">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Milage">Пробег</label>
            <input asp-for="Milage" type="number" class="form-control" id="milage" name="Milage" placeholder="Пробег">
            <span asp-validation-for="Milage" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="FuelType">Двигател</label>
            <select asp-for="@Model.FuelType" asp-items="@Html.GetEnumSelectList<FuelType>()" name="FuelType"  placeholder="Двигател" class="form-control">
                <option value="">Избери двигател</option>
            </select>
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Price">Цена</label>
            <input asp-for="Price" type="number" class="form-control" id="price" name="Price" placeholder="Цена">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="HorsePower">Мощност</label>
            <input asp-for="HorsePower" type="number" class="form-control" id="milage" name="HorsePower" placeholder="Мощност к.с.">
            <span asp-validation-for="HorsePower" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="TransmissionType">Трансмисия</label>
            <select asp-for="@Model.TransmissionType" asp-items="@Html.GetEnumSelectList<TransmissionType>()" placeholder="Трансмисия" name="TransmissionType" class="form-control">
                <option  value="">Избери трансмисия</option>
            </select>
            <span asp-validation-for="TransmissionType" class="text-danger"></span>
        </div>
    </div>
    <div align="center">

        <textarea asp-for="Description" name="Description" id="textarea" placeholder="Допълнителна информация" style="margin: 30px; height: 154px; width: 407px;"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="field" align="center" width=940 cellspacing=0 cellpadding=0 border=0 style="margin:0 auto; margin-top:25px;">
        <style>
            .thumb {
                height: 75px;
                border: 1px solid #000;
                margin: 10px 5px 0 0;
            }
        </style>
       
    </div>
    <div cellspacing=0 cellpadding=0 border=0 style="margin:0 auto; margin-top:25px;">
        <button type="submit" class="btn btn-primary">Редактирай</button>
    </div>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
