@model GeletoCarDealer.Web.ViewModels.Administration.Images.AllImagesViewModel

@{
    ViewData["Title"] = "Редактиране на снимки";
}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row py-2">
                            <div class="col-md-4 vertical-box">
                                <div class="card">
                                    @foreach (var image in Model.Images)
                                    {
                                        <div>
                                            <img src="@image.ImageUrl" />
                                        </div>
                                        <form method="post" asp-controller="Images" asp-action="DeleteImage" asp-route-id="@image.Id" align="center" enctype="multipart/form-data">
                                            <div>
                                                <button type="submit" class="btn btn-danger">Премахни снимка</button>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<form method="post" asp-controller="Images" asp-action="AddImages" asp-route-id="@Model.VehicleId" align="center" enctype="multipart/form-data">
    <div class="field" align="center" width=940 cellspacing=0 cellpadding=0 border=0 style="margin:0 auto; margin-top:25px;">
        <style>
            .thumb {
                height: 75px;
                border: 1px solid #000;
                margin: 10px 5px 0 0;
            }
        </style>
        <div class="field" align="center">
            <label asp-for="@Model.Images">Добави снимки</label>
            <input asp-for="@Model.Images" type="file" id="files" name="images" multiple />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
    </div>
    <div align="center" cellspacing=0 cellpadding=0 border=0 style="margin:0 auto; margin-top:25px;">
        <button type="submit" class="btn btn-primary">Добави</button>
    </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

